<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBarTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginLeft">80dp</item>
    </style>
    <style name="App.Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">26px</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="FadescreenTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>
    <style name="MyActionBarTabBackStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:paddingLeft">100dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>
    <style name="MyActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
    </style>
    <style name="MyActionBarTabTextStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textSize">24px</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="StdToggleButton" parent="@android:style/Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@null</item>
        <item name="android:button">@drawable/togglebutton_selector</item>
    </style>
    <style name="btn_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ff222222</item>
        <item name="android:background">@drawable/btn_bg_selector</item>
    </style>
    <style name="customtitlebar" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:buttonStyle">@style/App.Button</item>
        <item name="android:buttonStyleToggle">@style/StdToggleButton</item>
        <item name="android:textSize">28px</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
</resources>
