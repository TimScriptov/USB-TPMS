<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/time_dialog_plane"
    android:background="#88888888"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="#000"
        android:layout_width="470px"
        android:layout_height="380px">

        <TextView
            android:textSize="27px"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="10px"
            android:text="@string/luntaixiangtongjingaobutishe" />

        <View
            android:background="#fff"
            android:layout_width="380px"
            android:layout_height="1px" />&quot;
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/time_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8px"
            android:layout_centerHorizontal="true">

            <Button
                android:textSize="25px"
                android:gravity="center"
                android:id="@+id/mainbtn_0"
                android:tag="600"
                android:layout_width="440px"
                android:layout_height="64px"
                android:text="@string/tenminiter" />

            <Button
                android:textSize="25px"
                android:gravity="center"
                android:id="@+id/mainbtn_1"
                android:tag="1200"
                android:layout_width="440px"
                android:layout_height="64px"
                android:text="@string/tentwominiter" />

            <Button
                android:textSize="25px"
                android:gravity="center"
                android:id="@+id/mainbtn_2"
                android:tag="1800"
                android:layout_width="440px"
                android:layout_height="64px"
                android:text="@string/tenthereminiter" />

            <Button
                android:textSize="23px"
                android:gravity="center"
                android:id="@+id/mainbtn_3"
                android:tag="9223372036854775807"
                android:layout_width="440px"
                android:layout_height="64px"
                android:layout_marginBottom="14px"
                android:text="@string/xihuoqian" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
